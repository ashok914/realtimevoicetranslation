<TranslatorLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Image:
        source: 'logo.png'
        size_hint_y: None
        height: 80

    Label:
        text: 'Real Time Voice Translation'
        font_size: '20sp'
        bold: True
        size_hint_y: None
        height: 30

    BoxLayout:
        size_hint_y: None
        height: 40
        spacing: 5

        TextInput:
            id: input_lang
            hint_text: 'Speaking Language'
            text: root.input_lang
            on_text: root.input_lang = self.text

        TextInput:
            id: output_lang
            hint_text: 'Translating Language'
            text: root.output_lang
            on_text: root.output_lang = self.text

    BoxLayout:
        size_hint_y: None
        height: 40
        spacing: 10

        Button:
            text: 'Start'
            on_press: root.start_listening()

        Button:
            text: 'Stop'
            on_press: root.stop_listening()

    Label:
        text: "Speaking Text"
        size_hint_y: None
        height: 20

    ScrollView:
        Label:
            text: root.speaking_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None

    Label:
        text: "Translated Text"
        size_hint_y: None
        height: 20

    ScrollView:
        Label:
            text: root.translated_text
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
